<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_24"
            android:id="@+id/back"
            />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/patien"
            android:contentDescription="Profile Image" />

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Image"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- NAME -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="NAME:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:textColor="#61FF78"
                android:textColorHint="#D1D1D1"/>
        </LinearLayout>

        <!-- ADDRESS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ADDRESS:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etadd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your Address"
                android:textColor="#61FF78"
                android:textColorHint="#D1D1D1"/>
        </LinearLayout>

        <!-- AGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="AGE:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your age"
                android:textColor="#61FF78"
                android:textColorHint="#D1D1D1"/>
        </LinearLayout>

        <!-- HEIGHT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HEIGHT:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etheight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your height in inch"
                android:textColor="#61FF78"
                android:textColorHint="#D1D1D1"/>
        </LinearLayout>

        <!-- WEIGHT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="WEIGHT:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etweight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your Weight"
                android:textColor="#61FF78"
                android:textColorHint="#D1D1D1"/>
        </LinearLayout>

        <!-- BLOOD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="BLOOD:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etblood"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Enter your Blood group"
                android:textColor="#61FF78"
                android:textColorHint="#D1D1D1"/>
        </LinearLayout>

        <!-- EMAIL (Label + TextView) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="EMAIL:"
                android:textColor="#61FF78"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#61FF78"
                android:textSize="16sp"
                android:textIsSelectable="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Information"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
